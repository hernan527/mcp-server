{
    "compilerOptions": {
        "module": "ESNext",
        "esModuleInterop": true,
        "target": "ES2020",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "allowJs": true,
        "paths": {
            "*": ["node_modules/*"]
        },
        "types": [
            "node"
          ]
    },
    "include": ["app/*"]
}
